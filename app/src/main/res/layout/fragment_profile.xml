<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:padding="16dp">

    <ImageView
        android:id="@+id/ivAppLogo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginTop="16dp"
        android:src="@drawable/film_find_logo"/>

    <ImageView
        android:id="@+id/ivNotificationIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="16dp"
        android:src="@drawable/ic_notification"/>

    <ImageView
        android:id="@+id/ivProfilePicture"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_below="@id/ivAppLogo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:src="@drawable/ic_profile"
        android:scaleType="centerCrop"
        android:background="@drawable/circle_background" />

    <TextView
        android:id="@+id/tvUsername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ivProfilePicture"
        android:layout_centerHorizontal="true"
        android:text="hazelroquim"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:layout_marginTop="16dp"
        android:fontFamily="sans-serif-medium"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvUsername"
        android:layout_marginTop="16dp"
        android:orientation="vertical"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal">

        <Button
            android:id="@+id/btnAccountSettings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Account Settings"
            android:drawableStart="@drawable/ic_account_settings"
            android:drawablePadding="8dp"
            android:backgroundTint="@color/colorSecondary"
            android:textColor="@color/colorOnSecondary"
            android:padding="12dp"
            android:textSize="16sp"
            android:fontFamily="sans-serif-medium"
            android:layout_marginBottom="8dp"
            android:gravity="start|center_vertical"/>

        <Button
            android:id="@+id/btnAppSettings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="App Settings"
            android:drawableStart="@drawable/ic_app_settings"
            android:drawablePadding="8dp"
            android:backgroundTint="@color/colorSecondary"
            android:textColor="@color/colorOnSecondary"
            android:padding="12dp"
            android:textSize="16sp"
            android:fontFamily="sans-serif-medium"
            android:layout_marginBottom="8dp"
            android:gravity="start|center_vertical"/>

        <Button
            android:id="@+id/btnFeedback"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Feedback"
            android:drawableStart="@drawable/ic_feedback"
            android:drawablePadding="8dp"
            android:backgroundTint="@color/colorSecondary"
            android:textColor="@color/colorOnSecondary"
            android:padding="12dp"
            android:textSize="16sp"
            android:fontFamily="sans-serif-medium"
            android:layout_marginBottom="8dp"
            android:gravity="start|center_vertical"/>

        <Button
            android:id="@+id/btnContactUs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Contact Us"
            android:drawableStart="@drawable/ic_contact_us"
            android:drawablePadding="8dp"
            android:backgroundTint="@color/colorSecondary"
            android:textColor="@color/colorOnSecondary"
            android:padding="12dp"
            android:textSize="16sp"
            android:fontFamily="sans-serif-medium"
            android:layout_marginBottom="8dp"
            android:gravity="start|center_vertical"/>

        <Button
            android:id="@+id/btnLogout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Log Out"
            android:backgroundTint="@color/colorSecondary"
            android:textColor="@color/colorOnSecondary"
            android:padding="12dp"
            android:textSize="16sp"
            android:fontFamily="sans-serif-medium"
            android:layout_marginTop="16dp"
            android:gravity="center"/>
    </LinearLayout>
</RelativeLayout>
